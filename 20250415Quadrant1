<body>
  <h2 style="text-align:center">AgriTech Quadrant: Ability to Execute vs. Completeness of Vision</h2>
  <div class="quadrant" id="quadrant">
    <div class="quadrant-label tl">Leaders</div>
    <div class="quadrant-label tr">Visionaries</div>
    <div class="quadrant-label bl">Challengers</div>
    <div class="quadrant-label br">Niche Players</div>
    <div class="tooltip" id="tooltip"><span class="close-btn" onclick="tooltip.style.display='none'">&times;</span><div id="tooltip-content"></div></div>
  </div>

  <script>
    const companies = [
      { name: "Farmforce", x: 75, y: 75, description: "Farmforce offers smallholder traceability and compliance across 65+ countries. Solid execution, vision mostly first-mile focused." },
      { name: "Koltiva", x: 85, y: 80, description: "Comprehensive solution for cocoa, palm, seafood. Strong execution and vision in multi-crop sustainability." },
      { name: "Acclym", x: 90, y: 85, description: "Enterprise-grade risk analytics and EUDR tools, used by General Mills, NestlÃ©, AB InBev." },
      { name: "Dimitra", x: 40, y: 85, description: "Bold AI + blockchain stack for smallholders; vision strong, execution early-stage." },
      { name: "Meridia", x: 80, y: 30, description: "Geo-mapping and land verification for compliance. Execution strong, vision narrowly scoped." },
      { name: "Satelligence", x: 80, y: 70, description: "Remote-sensing platform for deforestation monitoring. Vision aligned with EUDR, strong in execution." },
      { name: "Sourcemap", x: 85, y: 90, description: "Pioneer in traceability mapping from MIT. Strong enterprise compliance and due diligence network." }
    ];

    const quadrant = document.getElementById("quadrant");
    const tooltip = document.getElementById("tooltip");
    const tooltipContent = document.getElementById("tooltip-content");

    companies.forEach(({ name, x, y, description }) => {
      const dot = document.createElement("div");
      dot.classList.add("dot");
      dot.style.left = `${x}%`;
      dot.style.top = `${100 - y}%`;

      // Add quadrant color class
      if (x >= 50 && y >= 50) dot.classList.add("leaders");
      else if (x < 50 && y >= 50) dot.classList.add("challengers");
      else if (x >= 50 && y < 50) dot.classList.add("visionaries");
      else dot.classList.add("niche");

      // Label
      const label = document.createElement("div");
      label.classList.add("dot-label");
      label.style.left = `${x}%`;
      label.style.top = `${100 - y + 2}%`;
      label.textContent = name;

      dot.addEventListener("click", (e) => {
        tooltipContent.innerHTML = `<strong>${name}</strong><br>${description}`;
        tooltip.style.left = `${x}%`;
        tooltip.style.top = `${100 - y}%`;
        tooltip.style.display = "block";
      });

      quadrant.appendChild(dot);
      quadrant.appendChild(label);
    });

    document.addEventListener("click", (e) => {
      if (!e.target.classList.contains("dot") && !e.target.classList.contains("close-btn")) {
        tooltip.style.display = "none";
      }
    });
  </script>
</body>
</html>
